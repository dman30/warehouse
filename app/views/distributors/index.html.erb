<h1>Listing Distributors</h1>

<table>

	<tr>
		<th>Company Name</th>
		<th>Note</th>
		<th>Contact</th>
	</tr>

<% @distributors.each do |distributor| %>
	<tr>
		<td class="list_attributes">
				<%= distributor.company_name %>
		</td>

		<td class="list_attributes">
				<%= distributor.note %>
		</td>

		<td class="list_attributes">
			<%= link_to 'Show Contact', distributor.contact %>
		</td>

		<td class="list_actions">
			<%= link_to 'Show', distributor %>
			<%= link_to 'Edit', edit_distributor_path(distributor) %>
			<%= link_to 'Destroy', distributor, :confirm => 'Are you sure?', :method => :delete %>
		</td>
	</tr>
<% end %>

</table>

<br />

<%= link_to 'New Distributor', new_distributor_path %>
