<h1>Listing Contacts</h1>

<table>
	<tr>
		<th>Company Name</th>
		<th>Gender</th>
		<th>Title</th>
		<th>First Name</th>
		<th>Last Name</th>
		<th>Phone</th>
		<th>Mobile</th>
		<th>E-Mail</th>
		<th>Website</th>
		<th>Street 1</th>
		<th>Street 2</th>
		<th>Zipcode</th>
		<th>Town</th>
		<th>Country</th>
		<th>Note</th>
	</tr>

<% @contacts.each do |contact| %>

	<tr>
		<td class="list_attributes">
			<%= contact.company_name %>
		</td>

		<td class="list_attributes">
			<%= contact.gender %>
		</td>

		<td class="list_attributes">
			<%= contact.title %>
		</td>

		<td class="list_attributes">
			<%= contact.first_name %>
		</td>

		<td class="list_attributes">
			<%= contact.last_name %>
		</td>

		<td class="list_attributes">
			<%= contact.phone %>
		</td>

		<td class="list_attributes">
			<%= contact.mobile %>
		</td>

		<td class="list_attributes">
			<%= contact.email %>
		</td>

		<td class="list_attributes">
			<%= contact.website %>
		</td>

		<td class="list_attributes">
			<%= contact.street1 %>
		</td>

		<td class="list_attributes">
			<%= contact.street2 %>
		</td>

		<td class="list_attributes">
			<%= contact.zipcode %>
		</td>

		<td class="list_attributes">
			<%= contact.town %>
		</td>

		<td class="list_attributes">
			<%= contact.country %>
		</td>

		<td class="list_attributes">
			<%= contact.note %>
		</td>

		<td class="list_actions">
			<%= link_to 'Show', contact %>
			<%= link_to 'Edit', edit_contact_path(contact) %>
			<%= link_to 'Destroy', contact, :confirm => 'Are you sure?', :method => :delete %>
		</td>
	</tr>
<% end %>

</table>

<br />

<%= link_to 'New Contact', new_contact_path %>
