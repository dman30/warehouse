<%= simple_form_for @contact, :html => { :class => 'form-horizontal' } do |f| %>

  <%= f.error_notification %>

  <div class="well">
  <legend><%= controller.action_name.capitalize %> Contact</legend>

    <%= f.input :gender, :collection => ['Frau', 'Herr'], :prompt => "- Select gender -" %>
    <%= f.input :title, :collection => ['Dr.', 'Prof.'], :prompt => "- Select title -" %>
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :company_name %>
    <%= render '/contact_form', :f => f %>
  </div>

  <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                contacts_path, :class => 'btn' %>
  </div>  

<% end %>