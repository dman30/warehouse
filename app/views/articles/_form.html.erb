<%= form_for(@article) do |f| %>
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
      <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :category %><br />
    <%= f.text_field :category %>
  </div>

  <div class="field">
    <% if Producer.all.count == 0 %>
      <%= f.label :producer_id %><br />
      <%= link_to 'New Producer', new_producer_path %>
    <% else %>
      <%= f.label :producer_id %><br />
      <%= f.collection_select :producer_id, Producer.all, :id, :name, :prompt => "Select Producer" %>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :distributor_id %><br />
    <%= f.collection_select :distributor_id, Distributor.all, :id, :name, :prompt => "Select Distributor" %>
  </div>

  <div class="field">
    <%= f.label :barcode %><br />
    <%= f.text_field :barcode %>
  </div>

  <div class="field">
    <%= f.label :serial_no %><br />
    <%= f.text_field :serial_no %>
  </div>

  <div class="field">
    <%= f.label :purchase_date %><br />
    <%= f.date_select :purchase_date %>
  </div>

  <div class="field">
    <%= f.label :warranty_expiration %><br />
    <%= f.date_select :warranty_expiration %>
  </div>

  <div class="field">
    <%= f.label :installation_date %><br />
    <%= f.date_select :installation_date %>
  </div>

  <div class="field">
    <%= f.label :note %><br />
    <%= f.text_area :note, :rows => 3 %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
