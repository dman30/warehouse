<%= form_for(@article) do |f| %>
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
      <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :category %><br />
    <%= f.text_field :category %>
  </div>

  <div class="field">
    <%= f.label :producer %><br />  
    <%= f.select :producer_id, Producer.all.collect {|x| [x.name, x.id]}, {} %>
    <!-- collection_select(:company, :country_id, Country.all, :id, :name, :prompt => 'Please select country') -->
  </div>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :distributor %><br />
    <%= f.select :distributor, Distributor.all.collect {|x| [x.name, x.id]}, {} %>
  </div>

  <div class="field">
    <%= f.label :barcode %><br />
    <%= f.text_field :barcode %>
  </div>

  <div class="field">
    <%= f.label :serial_no %><br />
    <%= f.text_field :serial_no %>
  </div>

  <div class="field">
    <%= f.label :purchase_date %><br />
    <%= f.text_field :purchase_date %>
  </div>

  <div class="field">
    <%= f.label :warranty_expiration %><br />
    <%= f.text_field :warranty_expiration %>
  </div>

  <div class="field">
    <%= f.label :note %><br />
    <%= f.text_area :note, :rows => 3 %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
