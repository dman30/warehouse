<div id="article_list">
	<h1>Listing Articles</h1>

	<table>
		<tr>
			<th>Producer</th>
			<th>Distributor</th>
			<th>Category</th>
			<th>Name</th>
			<th>Barcode</th>
			<th>Serial No.</th>
			<th>Purchase Date</th>
			<th>Warranty Expiration</th>
			<th>Installation Date</th>
			<th>Note</th>
		</tr>

		<% @articles.each do |article| %>
		<tr>
			<td class="list_attributes">
				<%= article.producer.nil? ? "Kein Hersteller angegeben" : article.producer.name %>
			</td>

			<td class="list_attributes">
				<%= article.producer.nil? ? "Kein HÃ¤ndler angegeben" : article.distributor.name %>
			</td>

			<td class="list_attributes">
				<%= article.category %>
			</td>

			<td class="list_attributes">
					<%= article.name %>
			</td>

			<td class="list_attributes">
				<%= article.barcode %>
			</td>

			<td class="list_attributes">
				<%= article.serial_no %>
			</td>

			<td class="list_attributes">
				<%= article.purchase_date %>
			</td>

			<td class="list_attributes">
				<%= article.warranty_expiration %>
			</td>

			<td class="list_attributes">
				<%= article.installation_date %>
			</td>

			<td class="list_attributes">
				<%= article.note %>
			</td>

			<td class="list_actions">
				<%= link_to 'Show', article %>
				<%= link_to 'Edit', edit_article_path(article) %>
				<%= link_to 'Destroy', article, :confirm => 'Are you sure?', :method => :delete %>
			</td>
		</tr>
	<% end %>

	</table>
</div>

