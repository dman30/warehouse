<%- model_class = Article.new.class -%>
<h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>

<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:category) %></th>
      <th><%= model_class.human_attribute_name(:producer) %></th>
      <th><%= model_class.human_attribute_name(:distributor) %></th>
      <th><%= model_class.human_attribute_name(:purchase_date) %></th>
      <th><%= model_class.human_attribute_name(:employee) %></th>
      <th><%= model_class.human_attribute_name(:installation_date) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |article| %>
      <tr id="<%=dom_id(article)%>">
        <td><%= link_to article.name, article_path(article), :class => "article_link" %></td>
        <td><%= article.category %></td>
        <td><% if article.producer %>
          <%= link_to article.producer.company_name, producer_path(article.producer), :class => "article_link" %>
          <% else %>
            - No Producer -
          <% end %>
        </td>
        <td><% if article.distributor %>
          <%= link_to article.distributor.company_name, distributor_path(article.distributor), :class => "article_link" %>
          <% else %>
            - No Distributor -
          <% end %>
        </td>
        <td><%= article.purchase_date %></td>
        <td><% if article.employee %>
          <%= link_to article.employee.full_name, employee_path(article.employee), :class => "article_link" %>
          <% else %>
            Warehouse
          <% end %>
        </td>
        <td><%= article.installation_date %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_article_path(article), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      article_path(article),
                      :method => :delete,
                      remote: true,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_article_path,
            :class => 'btn btn-primary' %>
