<%- model_class = @article.class -%>
<h1><%=t '.title', :default => model_class.model_name.human %></h1>

<p id="notice"><%= notice %></p>

<p>
  <strong><%= model_class.human_attribute_name(:producer) %>:</strong><br>
  <%= @article.producer.company_name %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:distributor) %>:</strong><br>
  <%= @article.distributor.company_name %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:category) %>:</strong><br>
  <%= @article.category %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:name) %>:</strong><br>
  <%= @article.name %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:barcode) %>:</strong><br>
  <%= @article.barcode %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:serial_no) %>:</strong><br>
  <%= @article.serial_no %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:purchase_date) %>:</strong><br>
  <%= @article.purchase_date %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:warranty_expiration) %>:</strong><br>
  <%= @article.warranty_expiration %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:installation_date) %>:</strong><br>
  <%= @article.installation_date %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:note) %>:</strong><br>
  <%= @article.note %>
</p>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              articles_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_article_path(@article), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              article_path(@article),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
