<%- action_name = controller.action_name.capitalize -%>
<%- model_class = @article.class -%>
<%- model_name = model_class.model_name.human -%>

<div class="container">
  <div class="row">

    <div class="span3">
      <div class="well">
        <legend><%= action_name + ' ' + model_name %></legend>

        <p>
          <strong><%= @article.name %></strong>
        </p>
        <p>
          <em><%= model_class.human_attribute_name(:category) %>:</em>
          <% if @article.category %>
            <%= @article.category.name %><br>
          <% else %>
            - No Category -
          <% end %>
        </p>
        <p>
          <em><%= model_class.human_attribute_name(:producer) %>:</em>
          <% if @article.producer %>
            <%= @article.producer.company_name %>
          <% else %>
            - No Producer -
          <% end %><br>
          <em><%= model_class.human_attribute_name(:distributor) %>:</em>
          <% if @article.distributor %>
            <%= @article.distributor.company_name %>
          <% else %>
            - No Distributor -
          <% end %>
        </p>
        <p>
          <em><%= model_class.human_attribute_name(:barcode) %>:</em>
          <%= @article.barcode %><br>
          <em><%= model_class.human_attribute_name(:serial_no) %>:</em>
          <%= @article.serial_no %>
        </p>
        <p>
          <em><%= model_class.human_attribute_name(:purchase_date) %>:</em>
          <%= @article.purchase_date %><br>
          <em><%= model_class.human_attribute_name(:warranty_expiration) %>:</em>
          <%= @article.warranty_expiration %><br>
          <em><%= model_class.human_attribute_name(:installation_date) %>:</em>
          <%= @article.installation_date %>
        </p>
        <% if @article.note != "" %>
          <p>
            <em class="icon-info-sign"></em>
            <%= @article.note %>
          </p>
        <% end %>
      </div>

      <div class="well">
        <%= link_to raw('<i class="icon-arrow-left icon-white"></i>'),
          articles_path,
          :class => 'btn'  %>
        <%= link_to raw('<i class="icon-edit icon-white"></i>'),
          edit_article_path(@article),
          :class => 'btn' %>
        <%= link_to raw('<i class="icon-trash icon-white"></i>'),
          article_path(@article),
          :method => 'delete',
          :confirm => t('.confirm',
            :default => t("helpers.links.confirm",
            :default => 'Are you sure?')),
          :class => 'btn btn-danger' %>
      </div>
    </div>

    <div class="span9">
      <div class="well">
        <legend>Articles's Employees</legend>

        <p>.. list all employees with this article ..</p>
      </div>
    </div>
  </div>
</div>
