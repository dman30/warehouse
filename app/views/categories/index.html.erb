<legend>Categories</legend>

<div class="row">
  <div class="span6" id="categories">
    <%= render @categories %>
  </div>

<div class="span6">
  <%= form_for(Category.new, remote: true) do |f| %>
    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
</div>

</div>
