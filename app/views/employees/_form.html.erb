    <%= f.label :first_name %><br />  
    <%= f.text_field :first_name %>
  </div>

  <div class="field">
    <%= f.label :last_name %><br />  
    <%= f.text_field :last_name %>
  </div>

  <div class="field">
    <%= f.label :location %><br />  
    <%= f.select :location, ['4. OG', '5. OG', '6. OG'], :prompt => true %>
  </div>

  <div class="field">
    <%= f.label :note %><br />
    <%= f.text_area :note, :rows => 3 %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>