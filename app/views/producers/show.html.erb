<%- action_name = controller.action_name.capitalize %>
<%- model_name = @producer.class.model_name.human -%>

<div class="container">
  <div class="row">

    <div class="span3">
      <div class="well">
        <legend><%= action_name + ' ' + model_name %></legend>

        <p>
          <strong><%= @producer.contact.company_name %></strong>
        </p>
        <p class="icon-info-sign">
          <%= @producer.note %>
        </p>
      </div>
      <div class="form-actions">
        <%= link_to t('.back', 
          :default => t("helpers.links.back")),
          distributors_path, 
          :class => 'btn'  %>
        <%= link_to t('.edit', 
          :default => t("helpers.links.edit")),
          edit_distributor_path(@distributor), 
          :class => 'btn' %>
        <%= link_to t('.destroy', 
          :default => t("helpers.links.destroy")),
          distributor_path(@distributor),
          :method => 'delete',
          :confirm => t('.confirm', 
            :default => t("helpers.links.confirm", 
            :default => 'Are you sure?')),
          :class => 'btn btn-danger' %>
      </div>
    </div>
    <div class="span3">
      <div class="well">
        <legend>Contact Data</legend>

        <p>
          <%= @producer.contact.gender %> 
          <% if @producer.contact.title != "" %>
            (<%= @producer.contact.title %>)
          <% end %>
          <%= @producer.contact.first_name %> <%= @producer.contact.last_name %>
        </p>
        <address>
          <%= @producer.contact.street1 %><br>
          <%= @producer.contact.street2 if @producer.contact.street2 %>
          <%= @producer.contact.zipcode + ' ' + @producer.contact.town %><br>
          <%= @producer.contact.country %>
        </address>
        <p>
          <i class="icon-user"></i>
          <% if @producer.contact.phone != "" %> <%= @producer.contact.phone %> <% else %> - <% end %> <br>
          <i class="icon-user"></i>
          <% if @producer.contact.mobile != "" %> <%= @producer.contact.mobile %> <% else %> - <% end %> <br>
          <i class="icon-envelope"></i>
          <% if @producer.contact.email != "" %> <%= @producer.contact.email %> <% else %> - <% end %> <br>
          <i class="icon-globe"></i>
          <% if @producer.contact.website != "" %> <%= @producer.contact.website %> <% else %> - <% end %>
        </p>
        <% if @producer.contact.note != "" %>
          <p>
            <i class="icon-wrench"></i>
            <%= @producer.contact.note %>
          </p>
        <% end %>
      </div>
    </div>

    <div class="span6">
      <div class="well">
        <legend>Producer's Articles</legend>

        <p>text</p>
      </div>
    </div>
  </div>
</div>

