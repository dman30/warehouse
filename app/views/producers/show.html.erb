<%- model_class = @producer.class -%>
<h1><%=t '.title', :default => model_class.model_name.human %></h1>

<p>
  <strong><%= model_class.human_attribute_name(:company_name) %>:</strong><br>
  <%= @producer.company_name %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:note) %>:</strong><br>
  <%= @producer.note %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:contact) %> Name:</strong><br>
  <%= @producer.contact.gender + ' ' + @producer.contact.title + ' ' + @producer.contact.first_name + ' ' + @producer.contact.last_name %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:contact) %> Address:</strong><br>
  <%= @producer.contact.street1 %><br>
  <%= @producer.contact.street2 if @producer.contact.street2 %>
  <%= @producer.contact.zipcode + ' ' + @producer.contact.town %><br>
  <%= @producer.contact.country %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:contact) %> Data:</strong><br>
  Phone: <%= @producer.contact.phone %><br>
  Mobile: <%= @producer.contact.mobile %><br>
  E-Mail: <%= @producer.contact.email %><br>
  Website: <%= @producer.contact.website %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:contact) %> Note:</strong><br>
  <%= @producer.contact.note %>
</p>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              producers_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_producer_path(@producer), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              producer_path(@producer),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
